<%- include('partials/header.ejs'); %>
    <body>
        <%- include('partials/navbar.ejs'); %>
        <div class="container">
            <br>
            <div class="card">
                <div class="card-header">
                    <h1><%= ask.title %></h1>
                </div>
                <div class="card-body">
                    <p><%= ask.content %></p>
                </div>
            </div>
            <br>
            <h3>Respostas</h3>
            <% replies.forEach(reply => {%>
                <hr>
                <p class="form-control"><%= reply.content %></p>
            <% });%>
            <hr>
            <div class="card">
                <form action="/replysuccess" method="post">
                    <div class="card-header">
                        <h3>Responder</h3>
                    </div>
                    <div class="card-body">
                        <label>Conte√∫do:</label>
                        <textarea placeholder="Insira sua resposta aqui" name="content" class="form-control"></textarea>
                        <input type="hidden" name="id" value="<%= ask.id %>">
                        <br>
                        <button class="btn btn-primary">Responder</button>
                    </div>
                </form>
            </div>
            <br>
        </div>
    </body>
<%- include('partials/footer.ejs'); %>